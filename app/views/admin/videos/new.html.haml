%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], class: 'form-horizontal' do |v|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              .col-sm-8
                = v.text_field :title, class: 'form-control'
              .col-sm-8
                = v.select :category_id, options_for_select(Category.all.map {|cat| [cat.name, cat.id]}), class: 'form-control'
              .col-sm-8
                = v.text_area :description, class: 'form-control', row: 8
              .col-sm-8
                = v.file_field :large_cover, class: 'form-control btn btn-file'
              .col-sm-8
                = v.file_field :small_cover, class: 'form-control btn btn-file'
              .col-sm-8
                = v.text_field :video_url, class: 'form-control'
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
